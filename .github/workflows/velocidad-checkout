name: Medición de velocidad checkout
on:
  push:
    branches: [ main ]
jobs:
  speed-test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2
      - name: Instalar dependencias
        run: |
          npm install -g psi
      - name: Análisis de velocidad de carga Maria almenara checkout
        run: |
          psi https://www.mariaalmenara.pe/checkout-payment --nokey --strategy=desktop --threshold=90
